{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
  "manifestVersion": "1.16",
  "version": "1.0.0",
  "id": "{{TEAMS_APP_ID}}",
  "packageName": "com.microsoft.teams.azureblobuploader",
  "developer": {
    "name": "Azure Blob Uploader",
    "websiteUrl": "{{WEBSITE_URL}}",
    "privacyUrl": "{{WEBSITE_URL}}/privacy",
    "termsOfUseUrl": "{{WEBSITE_URL}}/terms"
  },
  "name": {
    "short": "Azure Blob Uploader",
    "full": "Azure Blob Uploader for Microsoft Teams"
  },
  "description": {
    "short": "Upload files to Azure Blob Storage directly from Teams",
    "full": "A simple and secure way to upload files from Microsoft Teams to your Azure Blob Storage containers. Supports multiple authentication methods and provides upload progress tracking."
  },
  "icons": {
    "outline": "outline.png",
    "color": "color.png"
  },
  "accentColor": "#0078D4",
  "configurableTabs": [
    {
      "configurationUrl": "{{WEBSITE_URL}}/config",
      "canUpdateConfiguration": true,
      "scopes": [
        "team",
        "groupchat"
      ]
    }
  ],
  "staticTabs": [
    {
      "entityId": "index",
      "name": "Azure Blob Uploader",
      "contentUrl": "{{WEBSITE_URL}}",
      "websiteUrl": "{{WEBSITE_URL}}",
      "scopes": [
        "personal"
      ]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "{{WEBSITE_DOMAIN}}"
  ],
  "webApplicationInfo": {
    "id": "{{AAD_APP_ID}}",
    "resource": "{{AAD_APP_RESOURCE}}"
  }
}
